<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ul.ProfileFragment">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="116dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="13dp"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bgLineLay"
        android:layout_width="362dp"
        android:layout_height="607dp"
        android:layout_marginTop="15dp"
        android:background="#F4F4F4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"

                android:src="@drawable/chad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="7dp"
                    android:text="Ahmad Chad"
                    android:textColor="#272727"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profNoTelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:text="08578969599"
                    android:textColor="#272727"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profileAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="7dp"
                    android:text="Jalan, Haji negeaw No.7, Sukabumi. Jawabarat"
                    android:textColor="#272727"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Keluar"
            android:textAlignment="viewStart"
            android:textColor="#FF0000"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>